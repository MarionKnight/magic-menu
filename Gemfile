source 'https://rubygems.org'
ruby "1.9.3"

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'

gem 'shotgun'

group :test do
  gem 'shoulda-matchers'
  gem 'rack-test'
  gem 'capybara'
end

group :test, :development do
  gem 'rspec'
  gem 'factory_girl'
  gem 'faker'
  gem 'debugger'
end
