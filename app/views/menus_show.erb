<h3><%= @menu.name %> Menu</h3>

<table>
  <tr><td>Items</td><td></td></tr>

<table>
  <tr><td>Menu Items</td><td></td></tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
  </tr>
  <% end %><hr>
</table>

<form action='/menus/items' method='post'>
  <input type='text' name='menu_name' value="menu_name">
  <input type='price' name='item_id' value="item_id">
  <input type='submit' value="Add Item To Menu">
</form>